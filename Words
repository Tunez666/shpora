using System;

class Program
{
    static void Main()
    {
        string text = "Мама мыла раму а мама читала книгу";

        // Разбиваем текст на слова
        string[] words = text.Split(new char[] { ' ', ',', '.', '!', '?', ';', ':' },
                                    StringSplitOptions.RemoveEmptyEntries);

        // Максимум разных букв не больше количества слов
        char[] letters = new char[words.Length];
        int[] counts = new int[words.Length];
        int size = 0; // сколько разных букв найдено

        // Считаем первые буквы слов
        for (int i = 0; i < words.Length; i++)
        {
            char first = char.ToLower(words[i][0]);
            bool found = false;

            // Проверяем, встречалась ли уже такая буква
            for (int j = 0; j < size; j++)
            {
                if (letters[j] == first)
                {
                    counts[j]++;
                    found = true;
                    break;
                }
            }

            // Если буква новая
            if (!found)
            {
                letters[size] = first;
                counts[size] = 1;
                size++;
            }
        }

        // Сортировка по возрастанию частоты (пузырёк)
        for (int i = 0; i < size - 1; i++)
        {
            for (int j = i + 1; j < size; j++)
            {
                if (counts[i] > counts[j])
                {
                    int tempCount = counts[i];
                    counts[i] = counts[j];
                    counts[j] = tempCount;

                    char tempLetter = letters[i];
                    letters[i] = letters[j];
                    letters[j] = tempLetter;
                }
            }
        }

        // Вывод
        Console.WriteLine("Буквы в порядке возрастания частоты:");
        for (int i = 0; i < size; i++)
        {
            Console.WriteLine(letters[i] + " — " + counts[i]);
        }
    }
}





using System;

class Program
{
    static void Main()
    {
        string text = "Мама мыла кассу группа аллея окно программа";

        // Разбиваем текст на слова
        string[] words = text.Split(new char[] { ' ', ',', '.', '!', '?', ';', ':' },
                                    StringSplitOptions.RemoveEmptyEntries);

        int totalWords = words.Length;
        int doubleConsonantWords = 0;

        // Строка с согласными буквами
        string consonants = "бвгджзйклмнпрстфхцчшщ";

        // Проверяем каждое слово
        for (int i = 0; i < words.Length; i++)
        {
            string word = words[i].ToLower();
            bool hasDoubleConsonant = false;

            // Проверяем соседние буквы
            for (int j = 0; j < word.Length - 1; j++)
            {
                char c1 = word[j];
                char c2 = word[j + 1];

                if (c1 == c2 && consonants.Contains(c1))
                {
                    hasDoubleConsonant = true;
                    break;
                }
            }

            if (hasDoubleConsonant)
                doubleConsonantWords++;
        }

        // Вычисляем процент
        double percent = (double)doubleConsonantWords / totalWords * 100;

        // Вывод
        Console.WriteLine("Всего слов: " + totalWords);
        Console.WriteLine("Слов с удвоенной согласной: " + doubleConsonantWords);
        Console.WriteLine("Процент: " + percent + "%");
    }
}
